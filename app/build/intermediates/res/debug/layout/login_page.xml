<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/blue_button"
        android:shadowRadius="4"
        android:text="@string/login"
        android:textColor="#FFFEF0"
        android:textSize="25sp"
        android:layout_above="@+id/btnGetStarted"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:visibility="invisible" />

    <Button
        android:id="@+id/btnGetStarted"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="@drawable/blue_button"
        android:shadowRadius="4"
        android:singleLine="true"
        android:text="Get Started"
        android:textColor="#FFFEF0"
        android:textSize="25sp"
        android:layout_marginBottom="40dp"
        android:layout_above="@+id/idEnableIndiaLogo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="25pt"
        android:id="@+id/idEnableIndiaLogo"
        android:src="@drawable/enable_india_logo"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/idSpellingTreeLogo"
        android:src="@drawable/spell_tree_logo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/btnLogin"
        android:layout_alignParentTop="true"
        />

</RelativeLayout><!-- From: file:/Users/piyushlashkari/Desktop/EnableIndiaSpellingApp/app/src/main/res/layout/login_page.xml -->
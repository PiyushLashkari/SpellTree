<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_above="@+id/btnGetStarted"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"
        android:background="@drawable/login_button"
        android:shadowRadius="4"
        android:text="@string/login"
        android:textColor="#FFFEF0"
        android:textSize="25sp" />

    <ImageView
        android:id="@+id/imgCiscoLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:src="@drawable/cisco_logo1" />

    <TextView
        android:id="@+id/txtSpellingToolLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="68dp"
        android:text="Spelling Tree Logo"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/btnGetStarted"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_above="@+id/imgCiscoLogo"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="34dp"
        android:background="@drawable/login_button"
        android:shadowRadius="4"
        android:singleLine="true"
        android:text="Get Started"
        android:textColor="#FFFEF0"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/txtEnableIndiaLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/imgCiscoLogo"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:text="Enable India \nLogo"
        android:textAppearance="?android:attr/textAppearanceSmall" />

</RelativeLayout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <EditText
        android:id="@+id/txtContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:minLines="2"
        android:padding="10dp"
        android:hint="Type Here"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/btnReplay"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_below="@id/txtContent"
        android:text="Replay"
        android:background="@drawable/login_button"
        />


    <Button
        android:id="@+id/btnCheck"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:text="Check"
        android:background="@drawable/login_button"
        android:layout_alignTop="@+id/btnReplay"
        android:layout_alignRight="@+id/txtContent"
        android:layout_alignEnd="@+id/txtContent" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/leftButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@id/btnReplay"
        android:layout_marginTop="90dp"
        android:contentDescription="Previous"
        android:background="@drawable/left_button_bright"/>


    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/rightButton"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@id/btnCheck"
        android:contentDescription="Next"
        android:layout_marginTop="90dp"
        android:background="@drawable/right_button_dark"/>
</RelativeLayout>